<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Im" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_a200</item>
        <item name="colorPrimaryVariant">@color/yellow_a400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_a200</item>
        <item name="colorSecondaryVariant">@color/yellow_a400</item>
        <item name="colorOnSecondary">@color/darkgrey</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#212121</item>
        <item name="materialCardViewStyle">@style/AppCard</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/yellow_a400</item>
        <!-- Customize your theme here. -->
        <item name="primaryTextColor">#121212</item>
        <item name="secondaryTextColor">#99121212</item>
        <item name="Color1">@color/yellow_a200</item>
        <item name="Color2">@color/yellow_a400</item>
        <item name="barcolor">#FFFFFF</item>
        <item name="unscolor">#9f9f9f</item>
        <item name="iconbro">@drawable/jale</item>
        <item name="backgroundCardColor">#fff</item>
        <item name="backgroundCardColor2">#212121</item>
        <item name="backgroundColor">@color/yellow_a200</item>
        <item name="cardTextColor">#ffff00</item>
        <item name="blurbackround">#8AFFFFFF</item>
    </style>
    <color name="background">#FAFAFA</color>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">16dp</item>
        <item name="cardBackgroundColor">#212121</item>
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#121212</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>
</resources>