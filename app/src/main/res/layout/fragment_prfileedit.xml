<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".prfileedit">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:padding="16dp"
           android:id="@+id/lnperfil"

           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:id="@+id/cvprofileedit"
               android:layout_gravity="center"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardCornerRadius="100dp"
               android:layout_width="150dp"
               android:layout_height="150dp">
               <ImageView
                   android:id="@+id/ivperfiledit"
                   android:src="@drawable/ic__45_businessman"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>
           </androidx.cardview.widget.CardView>
           <LinearLayout
               android:gravity="center"
               android:layout_marginLeft="16dp"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <EditText
                   android:fontFamily="@font/sansjale"
                   android:theme="@style/MyEditTextTheme"
                   android:id="@+id/etregnameedit"
                   android:textColorHint="?attr/secondaryTextColor"
                   android:hint="@string/strname"
                   android:textColor="?attr/primaryTextColor"
                   android:textSize="16sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:maxLength="2"
                   android:inputType="number"
                   android:fontFamily="@font/sansjale"
                   android:theme="@style/MyEditTextTheme"
                   android:id="@+id/etregageedit"
                   android:textColorHint="?attr/secondaryTextColor"
                   android:hint="@string/strage"
                   android:textColor="?attr/primaryTextColor"
                   android:textSize="16sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <EditText
                   android:inputType="text"
                   android:fontFamily="@font/sansjale"
                   android:theme="@style/MyEditTextTheme"
                   android:id="@+id/etregubiedit"
                   android:textColorHint="?attr/secondaryTextColor"
                   android:hint="@string/strubi"
                   android:textColor="?attr/primaryTextColor"
                   android:textSize="16sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
       </LinearLayout>
       <ScrollView
           android:id="@+id/svreg"
           android:padding="16dp"
           android:layout_below="@+id/lnperfil"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:visibility="invisible"
                   android:orientation="vertical"
                   android:id="@+id/lntalentoedit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edocupationTalentedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strocupation"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edquestionTalentedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strpreguntatalento"
                       android:inputType="textCapSentences|textMultiLine"
                       android:maxLength="2000"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edtrajectoryTalentedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strtrajectory"
                       android:inputType="textCapSentences|textMultiLine"
                       android:maxLength="2000"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>



               </LinearLayout>
               <LinearLayout
                   android:visibility="invisible"
                   android:orientation="vertical"
                   android:id="@+id/lnempresaedit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edocupationBuisnesedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strocupation"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edcompanyBuisnesedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strcompanyreg"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edregdescribeedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strdescribe"
                       android:inputType="textCapSentences|textMultiLine"
                       android:maxLength="2000"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edtrajectoryBuisnesedit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strtrajectory"
                       android:inputType="textCapSentences|textMultiLine"
                       android:maxLength="2000"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>



               </LinearLayout>
               <LinearLayout
                   android:visibility="invisible"
                   android:orientation="vertical"
                   android:id="@+id/lnespectadoredit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <EditText
                       android:layout_marginBottom="16dp"
                       android:fontFamily="@font/sansjale"
                       android:theme="@style/MyEditTextTheme"
                       android:id="@+id/edocupationEspectadoredit"
                       android:textColorHint="?attr/secondaryTextColor"
                       android:hint="@string/strocupation"
                       android:textColor="?attr/primaryTextColor"
                       android:textSize="16sp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

               </LinearLayout>
           </RelativeLayout>
       </ScrollView>
       <LinearLayout
           android:layout_alignParentBottom="true"
           android:gravity="right"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:id="@+id/cvregokedit"
               android:foreground="?android:attr/selectableItemBackground"
               android:clickable="true"
               app:cardBackgroundColor="#00000000"
               android:layout_margin="16dp"
               app:cardCornerRadius="100dp"
               android:elevation="16dp"
               android:layout_marginBottom="16dp"
               android:layout_width="75dp"
               android:layout_height="50dp">
               <com.github.mmin18.widget.RealtimeBlurView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:realtimeBlurRadius="7dp"
                   app:realtimeOverlayColor="?attr/blurbackround" />
               <TextView
                   android:fontFamily="@font/sansjale"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="OK"
                   android:textColor="?attr/primaryTextColor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </androidx.cardview.widget.CardView>
       </LinearLayout>
   </RelativeLayout>

</FrameLayout>