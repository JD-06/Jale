<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?attr/backgroundCardColor"
    android:layout_margin="16dp"
    app:cardElevation="16dp"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/gg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvtitulohome"
        android:textStyle="bold"
        android:singleLine="false"
        android:textColor="?attr/primaryTextColor"
        android:gravity="left"
        android:textSize="16dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvdescriptionhome"
        android:layout_marginTop="16dp"
        android:singleLine="false"
        android:textColor="?attr/secondaryTextColor"
        android:gravity="left"
        android:textSize="14dp"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/gg"
        android:id="@+id/btnpostularse"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        style="@style/AppCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true">
        <TextView
            android:textSize="20dp"
            android:gravity="center"
            android:text="Postularse"
            android:textColor="?attr/cardTextColor"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
</androidx.cardview.widget.CardView>