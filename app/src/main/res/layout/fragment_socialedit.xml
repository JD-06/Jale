<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".socialedit">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="?attr/backgroundColor2"
            android:padding="16dp"
            android:orientation="horizontal"
            android:id="@+id/lnsocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:textColor="?attr/primaryTextColor"
                android:text="@string/strsocial"
                android:textSize="40dp"
                android:id="@+id/profname"
                android:textStyle="bold"
                android:singleLine="false"
                android:fontFamily="@font/sansjale"
                android:layout_width="200dp"
                android:layout_height="40dp"/>
            <ImageView
                android:id="@+id/socialaddedit"
                android:src="?attr/iconplus"
                android:layout_width="25dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvsocialsedit"
            android:layout_below="@+id/lnsocial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</FrameLayout>