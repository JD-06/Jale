<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="16dp"
    android:layout_width="match_parent"
    android:layout_height="250dp">
    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:realtimeBlurRadius="25dp"
        app:realtimeOverlayColor="?attr/blurbackround" />
    <RelativeLayout
        android:layout_gravity="center"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:theme="@style/MyEditTextTheme"
            android:layout_margin="16dp"
            android:id="@+id/etfilename"
            android:textColorHint="?attr/secondaryTextColor"
            android:hint="@string/strfilename"
            android:textColor="?attr/primaryTextColor"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <androidx.cardview.widget.CardView
            android:layout_below="@+id/etfilename"
            android:id="@+id/btnupload"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:text="@string/strselectfile"
                android:textColor="?attr/cardTextColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/btnupload"
            android:id="@+id/btnok"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            style="@style/AppCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true">
            <TextView
                android:textSize="20dp"
                android:gravity="center"
                android:text="OK"
                android:textColor="?attr/cardTextColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </androidx.cardview.widget.CardView>





    </RelativeLayout>
</androidx.cardview.widget.CardView>